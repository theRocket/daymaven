<!DOCTYPE html>
<html>
<head>
  <title>DayMaven</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :defaults, :cdn %>
  <%= javascript_include_tag :gmaps, "geokit" %>
  <%= yield :scripts %>
  <%= csrf_meta_tag %>
</head>

<body>

<div id = "container">
	<div id="header">

		<img id = "logo"; src="/images/daymaven.png";  />

		<search id="searchbar">	
			<%= form_tag url_for(:controller => :days, :action => :search), :method => "get" do %>
			<%= text_field_tag :search, params[:search] %>
			City<%= text_field_tag :city, params[:city], :id=>"city" %>
			<%= submit_tag "Search", :id => "searchbutton" %>
			<% end %>
		</search>
  
		<div id="user">
			<%= render 'users/login_items' %>
    </div>
    	<div id="smalltabs">				
					<%= link_to 'Home', days_path %>
					<%= link_to 'New Day', new_day_path %>
			</div>
  </div>
	
	
		
	

	<div id="wrapper">
		<div id="content">
		  <p class="notice"><%= notice %></p>		
   		<p class="alert"><%= alert %></p>
			<%= yield %>	
		</div>

	  <body onload="initialize()" onunload="GUnload()">
		<div id="map"> </div>
 	  </body>


	  <div id="footer">
			<iframe src="http://www.facebook.com/plugins/like.php?href=www.daymaven.com"
        scrolling="no" frameborder="0"
        style="border:none; width:450px; height:80px"></iframe>
    </div>
	</div>
</div>
</body>
</html>

