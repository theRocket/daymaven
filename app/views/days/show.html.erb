	<td>Average Rating</td>
	<td><%= @day.average_rating %></td>
  </tr>
  <tr>
	<td>Your Rating</td>
	<td><%= current_user_rating %></td>
  </tr>
</table>

<%- if current_user %>	
 <%= render 'rating' %>
<% end %>

