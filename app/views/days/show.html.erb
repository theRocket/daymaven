<p>
  <b>Title:</b>
  <%= @day.title %>
</p>

<p>
  <b>Description:</b>
  <%= auto_link(@day.description) %>
</p>

<table class="rating">
 <thead><tr colspan="2"><td>Day Ratings</td></tr></thead>
